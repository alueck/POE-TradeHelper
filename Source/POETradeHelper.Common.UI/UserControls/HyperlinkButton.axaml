<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:POETradeHelper.Common.UI.UserControls;assembly=POETradeHelper.Common.UI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="POETradeHelper.Common.UI.UserControls.HyperlinkButton">

  <UserControl.Template>
    <ControlTemplate TargetType="{x:Type local:HyperlinkButton}">
      <Button
        Padding="0"
        Background="Transparent"
        BorderThickness="0"
        Command="{Binding $parent[UserControl].OpenHyperlink}"
        Cursor="Hand"
        Foreground="{DynamicResource ThemeAccentBrush}"
        Content="{TemplateBinding Content}" />
    </ControlTemplate>
  </UserControl.Template>
</UserControl>