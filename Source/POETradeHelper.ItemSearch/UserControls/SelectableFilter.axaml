<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="POETradeHelper.ItemSearch.UserControls.SelectableFilter">

  <CheckBox DataContext="{Binding $parent[UserControl]}" IsChecked="{Binding Filter.IsEnabled}" HorizontalAlignment="Left" IsThreeState="{Binding IsThreeState}">
    <TextBlock Text="{Binding Filter.Text}" Margin="5" VerticalAlignment="Center" TextWrapping="Wrap" />
  </CheckBox>
</UserControl>